<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="@color/registerback"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



        <Switch
            android:id="@+id/switchAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn The Switch On   "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="55dp"

            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="15dp"
            android:fontFamily="serif"
            android:layout_marginTop="20dp"
            android:text="@string/switch1"
            />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="15dp"
        android:fontFamily="serif"
        android:layout_marginTop="10dp"
        android:text="@string/switch2"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="15dp"
        android:fontFamily="serif"
        android:layout_marginTop="10dp"
        android:text="@string/switch3"
        />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp"
        android:fontFamily="serif"
        android:layout_marginTop="10dp"
        android:text="@string/switch4"
        />






</LinearLayout>