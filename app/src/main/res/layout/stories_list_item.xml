<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/registerback"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="204dp"

        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">


        <TextView

            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="67dp"
            android:background="@color/lightgray"

            />

        <TextView
            android:id="@+id/textViewStoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="37dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Story Title"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewStoryDesc"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="85dp"
            android:fontFamily="serif"

            android:lineSpacingExtra="3dp"
            android:maxLines="3"
            android:text="Story Description"
            android:textColor="@color/gray"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="97dp" />

        <TextView
            android:id="@+id/textViewViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="303dp"
            android:layout_marginTop="9dp"
            android:text="Vs" />

        <ImageView
            android:id="@+id/imageViewEye"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/view"
            tools:layout_editor_absoluteX="293dp"
            tools:layout_editor_absoluteY="28dp" />

        <TextView
            android:id="@+id/textViewReadMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="238dp"
            android:layout_marginTop="170dp"
            android:text="...Read More"
            android:textColor="@color/blue"
            android:textSize="17dp" />




    </android.support.v7.widget.CardView>




</android.support.constraint.ConstraintLayout>