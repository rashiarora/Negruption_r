<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/registerback"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="360dp"
        android:layout_height="215dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6.5dp"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="19dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="9dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewStoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="8dp"
            android:textSize="18dp"
            android:maxLines="2"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Story Title" />

        <TextView
            android:id="@+id/textViewStoryDesc"
            android:layout_marginTop="91dp"
            android:layout_marginLeft="12dp"
            android:lineSpacingExtra="2.5dp"
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:maxLines="3"
           android:fontFamily="serif"
            android:textSize="18.5dp"
            android:textColor="@color/gray"
            android:text="Story Description" />

        <TextView
            android:id="@+id/textViewViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vs"
            android:layout_marginLeft="308dp"
            android:layout_marginTop="7dp"
            />
        <ImageView
            android:id="@+id/imageViewEye"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="325dp"
            android:layout_marginTop="6dp"
            app:srcCompat="@drawable/view"
            tools:layout_editor_absoluteX="293dp"
            tools:layout_editor_absoluteY="28dp" />

        <TextView
            android:id="@+id/textViewReadMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="...Read More"
            android:textSize="17dp"
            android:textColor="@color/blue"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="180dp"
            />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="75dp"
            android:background="@color/lightgray" />


    </android.support.v7.widget.CardView>




</android.support.constraint.ConstraintLayout>